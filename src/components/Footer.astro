---
import Container from './Container.astro';

export interface Props {
  projectBy: string;
}

const { projectBy } = Astro.props;

const BASE = import.meta.env.BASE_URL;
---

<div class='h-[80px] bg-secondary w-full py-6 text-white'>
  <Container className='flex flex-row items-center justify-between'>
    <div class='flex flex-row gap-2'>
      <span>Project By:</span>
      <span class='font-semibold'>{projectBy}</span>
    </div>
    <div class='flex flex-row gap-4'>
      This site was generated by <span class='font-semibold'>AVAnnotate</span>
      <a href=`${BASE}/manifests/manifest.json`>
        <img
          src=`https://iiif.io/assets/images/logos/logo-sm.png`
          alt='IIIF Manifest'
        />
      </a>
    </div>
  </Container>
</div>
